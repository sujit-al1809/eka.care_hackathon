generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  credit   Int
}

model Session {
  id          Int    @id @default(autoincrement())
  sessionId   String @unique
  notes       String
  selectedDocter Json?
  conversation  Json?
  report        Json?
  detectedLanguage String?
  createdBy   String
  createdOn   String
}
